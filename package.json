{
  "name": "sonoff",
  "version": "1.0.1",
  "description": "Promise based Sonoff API for node.js",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "release": "npx semantic-release --no-ci",
    "ts-types": "tsc --emitDeclarationOnly --outDir dist",
    "build": "rimraf dist && node script/build.js && npm run ts-types",
    "prepare": "npm run build"
  },
  "keywords": [
    "sonoff",
    "http",
    "promise",
    "node"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lucas-eduardo/sonoff.git"
  },
  "contributors": [
    "Lucas Eduardo (https://github.com/lucas-eduardo)"
  ],
  "author": "Lucas Eduardo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lucas-eduardo/sonoff/issues"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.30.3",
    "@typescript-eslint/parser": "^5.30.3",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.0.1",
    "esbuild": "^0.14.48",
    "esbuild-node-externals": "^1.4.1",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-import-helpers": "^1.2.1",
    "eslint-plugin-n": "^15.2.3",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "minimist": "^1.2.6",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "semantic-release": "^19.0.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "axios": "^0.27.2"
  },
  "peerDependencies": {
    "axios": "^0.27.2"
  },
  "files": [
    "dist",
    "src"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
